<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/NearBoxActionBar</item>
    </style>

    <style name="LoginTheme" parent="android:Theme.Holo.NoActionBar">
        <item name="android:editTextStyle">@style/EditTextAppTheme</item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>
    </style>

    <style name="EditTextAppTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/login_edit_text</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxAppTheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_btn_check</item>
    </style>

    <style name="NearBoxActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="LoginEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textColorHint">@color/background</item>
    </style>

    <style name="LetterActionLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="NavDrawerItem">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NavDrawerItem.Child" parent="NavDrawerItem">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="PinButton" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/button_pin</item>
    </style>

    <style name="PinDigit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textSize">44sp</item>
        <item name="android:focusable">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">44sp</item>
    </style>
</resources>
